{
  "name": "desk.pics-server",
  "version": "1.0.0",
  "main": "./build/dist/index.js",
  "repository": "https://github.com/serranoarevalo/desk.pics-server",
  "author": "Nicolás Serrano Arévalo <itnico.las.me@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "class-validator": "^0.8.5",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "graphql-yoga": "^1.14.10",
    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.3.0",
    "merge-graphql-schemas": "^1.5.1",
    "morgan": "^1.9.0",
    "node-ifttt-maker": "^1.0.2",
    "npm": "^6.1.0",
    "pg": "^7.4.3",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.4",
    "@types/pg": "^7.4.9",
    "copy": "^0.3.2",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^1.17.5",
    "ts-node": "^6.1.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "posttypes": "cp ./src/types/graph.d.ts ../client/src/types",
    "pretsc:build": "rm -rf build",
    "tsc:build": "tsc && cd src && copy ./api/**/*.graphql ../build/dist/api",
    "start": "cd build/dist && node .",
    "deploy": "now",
    "predeploy": "yarn run tsc:build"
  }
}
